<!DOCTYPE html>
<html>
<head>
  <title>CAADE</title>

  <!-- Viewport mobile tag for sensible mobile support -->
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <!--STYLES-->
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/main.css">
  <!--STYLES END-->

  <script src="/dependencies/sails.io.js"></script>
  <script src="/js/dcvis.js"></script>
  <script src="/js/vis-network.min.js"></script>
  <script src="/js/vis.js"></script>
  <script src="/js/Chart.js"></script>
  <script>
    function toggleMenu(id) {
      let submenus = document.getElementsByClassName('sub-action-bar-div');
      for(let i=0; i < submenus.length; i++) {
        submenus[i].style.display = "none";
      }
      let submenu = document.getElementById(id);
      submenu.style.display = "block";
    }
  </script>
</head>

<body>
<div class="default-page">
  <div class="header">
    <div class="current-page">Home</div>
  </div>
  <div class="side-bar">
    <ul class="action-bar">
      <li class="action-bar-list"><b>CAADE Portal</b></li>
      <li class="action-bar-list"><a href="/">Home</a></li>
      <li class="action-bar-list"><a onclick=toggleMenu('app-sub-list'); href="#">Application Developer</a></li>
      <div class="sub-action-bar-div" id="app-sub-list">
        <ul class="sub-action-bar">
          <li class="sub-action-bar-list"><a href="/app/list" target="work-frame">Applications</a></li>
          <li class="sub-action-bar-list"><a href="/instance/list" target="work-frame">Application Instances</a></li>
          <li class="sub-action-bar-list"><a href="/stack/list" target="work-frame">Repository</a></li>
        </ul>
      </div>
      <li class="action-bar-list"><a onclick=toggleMenu('dops-sub-list'); href="#">DevOps Manager</a></li>
      <div class="sub-action-bar-div" id="dops-sub-list">
        <ul class="sub-action-bar">
          <li class="sub-action-bar-list"><a href="http://localhost:8000">Builds</a></li>
          <li class="sub-action-bar-list"><a href="/env/list" target="work-frame">Environments</a></li>
          <li class="sub-action-bar-list"><a href="/cloud/list" target="work-frame">Pipelines</a></li>
          <li class="sub-action-bar-list"><a href="/policy/list" target="work-frame">Projects</a></li>
          <li class="sub-action-bar-list"><a href="/reservation/list" target="work-frame">Services</a></li>
          <li class="sub-action-bar-list"><a href="/user/list" target="work-frame">Users</a></li>
        </ul>
      </div>
      <li class="action-bar-list"><a onclick=toggleMenu('ops-sub-list'); href="#">Operations Manager</a></li>
      <div class="sub-action-bar-div" id="ops-sub-list">
        <ul class="sub-action-bar">
          <li class="sub-action-bar-list"><a href="http://localhost:9000" >Resources</a></li>
          <li class="sub-action-bar-list"><a href="/cloud/list" target="work-frame">Pipelines</a></li>
          <li class="sub-action-bar-list"><a href="/policy/list" target="work-frame">Projects</a></li>
          <li class="sub-action-bar-list"><a href="/reservation/list" target="work-frame">Services</a></li>
          <li class="sub-action-bar-list"><a href="/user/list" target="work-frame">Users</a></li>
        </ul>
      </div>
    </ul>
  </div>
  </ul>
</div>
<div class="work-area">
  <iframe name="work-frame" width="100%" height="120%" src="/portal" seamless></iframe>
</div>
</div>

</body>
</html>
